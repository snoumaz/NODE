<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Travel's Admin</title>
    <link rel="stylesheet" href="css/admin.css">
    <script src="js/admin.js" defer></script>
</head>
<body>
    <header><h1>Express travels</h1></header>
    <Main>
         <section id="update">
        <h2>Modifica los datos :</h2> 
        <form id="dataUpdate">
          <input type="hidden" id="id_update" name="id_update">
          <div>
            <label for="ruta_update">Ruta (URL) : </label>
            <input type="text" id="ruta_update" name="ruta_update" />
          </div>
          <div>
            <label for="lugar_update">Lugar : </label>
            <input type="text" id="lugar_update" name="lugar_update" />
          </div>
            <label for="nombre_update">Nombre del viaje: </label>
            <input type="text" id="nombre_update" name="nombre_update" />
          </div>
          <div>
            <label for="descripcion_update">Descripci√≥n : </label>
            <input type="text" id="descripcion_update" name="descripcion_update" />
          </div>
                    </div>
                      <label for="precio_update">Precio : </label>
            <input type="text" id="precio_update" name="precio_update" />
          </div>
          <div>
            <label for="img_update">Ruta de la imagen : </label>
            <input type="text" id="img_update" name="img_update" />
          </div>
          <div id="buttons">
            <button type="submit">Aceptar</button>
            <button type="reset">Borrar</button>
          </div>
        </form>
      </section>
        <section id="insert">
            <h2>A√±adir Destino</h2>
            <form action="/insert" method="post">
                <div>
                    <label for="ruta">Ruta:</label>
                    <input type="text" name="ruta" id="ruta">
                </div>
                <div>
                    <label for="lugar">Lugar:</label>
                    <input type="text" name="lugar" id="lugar">
                </div>
                <div>
                    <label for="nombre">Nombre:</label>
                    <input type="text" name="nombre" id="nombre">
                </div>
                <div>
                    <label for="descripcion">Descripcion:</label>
                    <input type="text" name="descripcion" id="descripcion">
                </div>
                <div>
                    <label for="precio">Precio:</label>
                    <input type="text" name="precio" id="precio">
                </div>
                <div>
                    <label for="img">Ruta de la imagen:</label>
                    <input type="text" name="img" id="img">
                </div>
                <div id="buttons">
                    <button type="submit">A√±adir</button>
                    <button type="reset">Borrar</button>
                </div>

            </form>
        </section>
        <section>
            <table>
                <tr>
                    <th>Ruta</th>
                    <th>Lugar</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th></th>
                    <th></th>
                </tr>
                  <% jsonData.forEach(travel =>{ %>
                <tr>
                    <td><a href="<%= travel.ruta %>"><%= travel.ruta %></a></td>
                    <td><%= travel.lugar %></td>
                    <td><%= travel.nombre %></td>
                    <td><%= travel.precio %></td>
                    <td><button title="Editar viaje"onclick="editTravel(`<%= JSON.stringify(travel) %>`)">üñä</button></td>
                    <td><button title="Borrar viaje"onclick="deleteTravel(`<%= travel.id %>`)">‚ùå</button></td>
                </tr>
            <% }) %>
            </table>
        </section>
    </Main>
</body>

</html>